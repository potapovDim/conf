{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": "built",
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "lib",
    "framework",
    "specs",
    "configs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ]
}